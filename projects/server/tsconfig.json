{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "outDir": "./dist",
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "allowJs": true,
        "types": [
            "node",
            "jest",
        ],
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "src/**/*"
    ]
}