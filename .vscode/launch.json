{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "cyp",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev:cli", "--", "list files on my home directory"],
      "skipFiles": ["<node_internals>/**", "${workspaceRoot}/node_modules/**/*.js", "${workspaceRoot}/**/node_modules/**/*.js"],
      "console": "integratedTerminal"
    },
    {
      "name": "development server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev:server"],
      "skipFiles": ["<node_internals>/**", "${workspaceRoot}/node_modules/**/*.js", "${workspaceRoot}/**/node_modules/**/*.js"]
    }
  ]
}
